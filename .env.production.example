# =============================================================================
# TOUR CRM - Production Environment Variables
# =============================================================================
# Copy this file to .env.production and fill in your production values
# NEVER commit .env.production or any file with real secrets
#
# For Coolify: Add these as environment variables in the Coolify dashboard
# =============================================================================

# =============================================================================
# DATABASE (Supabase)
# =============================================================================
# Get these from: https://supabase.com/dashboard/project/[project]/settings/database
DATABASE_URL=postgresql://postgres.[project]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true
DIRECT_URL=postgresql://postgres.[project]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# =============================================================================
# REDIS (Self-hosted via Coolify or external)
# =============================================================================
REDIS_URL=redis://:tourcrm2024@redis:6379
REDIS_PASSWORD=tourcrm2024

# =============================================================================
# CLERK (Authentication)
# =============================================================================
# Get these from: https://dashboard.clerk.com (use PRODUCTION keys!)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_...
CLERK_SECRET_KEY=sk_live_...
CLERK_WEBHOOK_SECRET=whsec_...

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# =============================================================================
# STRIPE (Payments)
# =============================================================================
# Get these from: https://dashboard.stripe.com/apikeys (use LIVE keys!)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# RESEND (Email)
# =============================================================================
# Get this from: https://resend.com/api-keys
RESEND_API_KEY=re_...
EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# TWILIO (SMS/WhatsApp) - Optional
# =============================================================================
# Get these from: https://console.twilio.com
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# INNGEST (Background Jobs)
# =============================================================================
# Get these from: https://app.inngest.com
INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=

# =============================================================================
# SENTRY (Error Tracking) - Recommended for production
# =============================================================================
# Get these from: https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_AUTH_TOKEN=sntrys_...
SENTRY_ORG=your-org
SENTRY_PROJECT=tour-crm

# =============================================================================
# APP CONFIGURATION
# =============================================================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://crm.yourdomain.com
NEXT_PUBLIC_WEB_URL=https://book.yourdomain.com

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# =============================================================================
# GUIDE PORTAL
# =============================================================================
GUIDE_PORTAL_URL=https://crm.yourdomain.com/guide
