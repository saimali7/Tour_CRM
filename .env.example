# =============================================================================
# TOUR PLATFORM - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local or any file with real secrets

# =============================================================================
# SUPABASE (Database + Storage)
# =============================================================================
# Get these from: https://supabase.com/dashboard/project/[project]/settings/api
DATABASE_URL=postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres
NEXT_PUBLIC_SUPABASE_URL=https://[project].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# =============================================================================
# REDIS (Self-hosted via Coolify)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# CLERK (Authentication)
# =============================================================================
# Get these from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
# Webhook secret from Clerk Dashboard > Webhooks
CLERK_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# =============================================================================
# STRIPE (Payments)
# =============================================================================
# Get these from: https://dashboard.stripe.com/test/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# RESEND (Email)
# =============================================================================
# Get this from: https://resend.com/api-keys
RESEND_API_KEY=re_...
EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# TWILIO (SMS/WhatsApp) - Optional
# =============================================================================
# Get these from: https://console.twilio.com
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# INNGEST (Background Jobs)
# =============================================================================
# Get these from: https://app.inngest.com
INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=

# =============================================================================
# SENTRY (Error Tracking) - Optional
# =============================================================================
# Get these from: https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_AUTH_TOKEN=sntrys_...
SENTRY_ORG=your-org
SENTRY_PROJECT=tour-crm

# =============================================================================
# APP CONFIGURATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_WEB_URL=http://localhost:3001
